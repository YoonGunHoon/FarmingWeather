<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Farming Weather"
        android:textColor="#000000"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="[농업 날씨]"
        android:textColor="#000000"
        android:textSize="25sp" />
	<Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:background="@drawable/mainteck"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btn1"
        android:background="@drawable/mainteck2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btn2"
        android:background="@drawable/mainteck3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btn3"
        android:background="@drawable/mainteck4"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btn4"
        android:background="@drawable/mainteck5"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18sp" />
	<Button
        android:id="@+id/btn5"
        android:background="@drawable/kumoh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
 />
</LinearLayout>
